<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#7b7b7b"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Choose Course:"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/prog1"
            android:layout_alignEnd="@+id/prog1"
            android:textColor="#ffffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:layoutMode="clipBounds"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="2"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programming I"
                android:id="@+id/prog1"
                android:checked="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffffff" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programming II"
                android:id="@+id/prog2"
                android:checked="false"
                android:layout_marginEnd="39dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="31dp"
                android:textColor="#ffffffff"
                android:layout_gravity="right"
                android:layout_weight="0.47" />

        </RadioGroup>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/exit"
            android:layout_alignEnd="@+id/exit"
            android:layout_marginBottom="65dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_marginRight="41dp"
                android:layout_marginEnd="41dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:weightSum="3">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/mark1"
                    android:textColor="#ffffffff"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/mark2"
                    android:textColor="#ffffffff"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/mark3"
                    android:textColor="#ffffffff"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout2"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_toLeftOf="@+id/linearLayout"
                android:layout_toStartOf="@+id/linearLayout"
                android:layout_marginRight="50dp"
                android:weightSum="3"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Case Study"
                    android:id="@+id/eval1"
                    android:layout_above="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/linearLayout2"
                    android:layout_alignStart="@+id/linearLayout2"
                    android:layout_marginBottom="18dp"
                    android:textColor="#ffffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignment 1"
                    android:id="@+id/eval2"
                    android:layout_marginBottom="20dp"
                    android:layout_above="@+id/eval3"
                    android:layout_toLeftOf="@+id/linearLayout"
                    android:layout_toStartOf="@+id/linearLayout"
                    android:textColor="#ffffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam 1"
                    android:id="@+id/eval3"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignLeft="@+id/eval2"
                    android:layout_alignStart="@+id/eval2"
                    android:textColor="#ffffffff"
                    android:layout_weight="1" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="COMPUTE"
                android:id="@+id/compute"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:id="@+id/clear"
                android:layout_below="@+id/compute"
                android:layout_alignLeft="@+id/compute"
                android:layout_alignStart="@+id/compute"
                android:layout_alignRight="@+id/exit"
                android:layout_alignEnd="@+id/exit"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="30dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:id="@+id/done"
                android:layout_below="@+id/clear"
                android:layout_alignLeft="@+id/clear"
                android:layout_alignStart="@+id/clear"
                android:layout_alignRight="@+id/clear"
                android:layout_alignEnd="@+id/clear"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXIT"
                android:id="@+id/exit"
                android:layout_below="@+id/done"
                android:layout_alignRight="@+id/compute"
                android:layout_alignEnd="@+id/compute"
                android:layout_alignLeft="@+id/compute"
                android:layout_alignStart="@+id/compute"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
